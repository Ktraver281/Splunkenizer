[Unit]
Description = Apache Spark Slave Server
After = network.target
After = systemd-user-sessions.service

[Service]
User = {{spark_user}}
Group = {{ spark_group }}
Type = forking
#EnvironmentFile = ~/etc/environment
ExecStart = {{spark_home}}/sbin/start-slave.sh spark://{{spark_sparkc_master}}:7077
ExecStop = {{spark_home}}/sbin/stop-slave.sh

[Install]
WantedBy = multi-user.target
